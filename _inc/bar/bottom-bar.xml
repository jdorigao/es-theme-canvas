<?xml version="1.0" encoding="UTF-8" ?>
<theme>
  <!-- Bottom Bar Elements -->
  <view name="system, basic, detailed, gamecarousel, grid">
    <!-- Help System -->
    <helpsystem name="help">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.97</pos>
      <size>1 0</size>
      <fontSize>${bottomBarFontSize}</fontSize>
      <fontPath>${fontBold}</fontPath>
      <textColor>${helpTextColor}</textColor>
      <iconColor>${helpIconColor}</iconColor>
      <iconA>${themePath}/_inc/images/help-button-east.svg</iconA>
      <iconB>${themePath}/_inc/images/help-button-south.svg</iconB>
      <iconX>${themePath}/_inc/images/help-button-north.svg</iconX>
      <iconY>${themePath}/_inc/images/help-button-west.svg</iconY>
    </helpsystem>
  </view>
</theme>
