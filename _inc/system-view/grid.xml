<?xml version="1.0" encoding="UTF-8" ?>
<theme defaultTransition="instant">
  <formatVersion>7</formatVersion>

  <!-- Include -->
  <include>${themePath}/_inc/variables/variables.xml</include>

  <view name="system">
    <imagegrid name="imagegrid">
      <zIndex>${zUI}</zIndex>
      <pos>0.008 0.08</pos>
      <size>0.975 0.9</size>
      <autoLayout ifSubset="sysgridsize:automatic">3 2</autoLayout>
      <autoLayout ifSubset="sysgridsize:automatic,aspect-ratio:16-9|16-9-auto|16-10|16-10-auto">4 2</autoLayout>
      <autoLayout ifSubset="sysgridsize:automatic,aspect-ratio:1-1|1-1-auto">3 3</autoLayout>
      <autoLayout ifSubset="sysgridsize:3x1">3 1</autoLayout>
      <autoLayout ifSubset="sysgridsize:3x2">3 2</autoLayout>
      <autoLayout ifSubset="sysgridsize:3x3">3 3</autoLayout>
      <autoLayout ifSubset="sysgridsize:4x2">4 2</autoLayout>
      <autoLayout ifSubset="sysgridsize:4x3">4 3</autoLayout>
      <autoLayout ifSubset="sysgridsize:4x4">4 4</autoLayout>
      <autoLayout ifSubset="sysgridsize:5x2">5 2</autoLayout>
      <autoLayout ifSubset="sysgridsize:5x3">5 3</autoLayout>
      <autoLayout ifSubset="sysgridsize:5x4">5 4</autoLayout>
      <cellProportion>1</cellProportion>
      <margin>0</margin>
      <scrollbarColor>96969620</scrollbarColor>
      <scrollbarCorner>0.49</scrollbarCorner>
      <scrollbarSize>0.005</scrollbarSize>
      <scrollbarAlignment>right</scrollbarAlignment>
      <padding>0 0 0 0</padding>

      <itemTemplate>
        <!-- System View: Grid (Icons)-->
        <container ifSubset="icon-scheme:icon">
          <scale>1</scale>
          <padding>10 10 10 10</padding>

          <storyboard event="activate">
            <animation property="scale" to="1.05" duration="150" mode="easeOut" />
          </storyboard>

          <storyboard event="deactivate">
            <animation property="scale" to="1" duration="250" mode="easeOut" />
          </storyboard>

          <image name="selector" extra="true">
            <path>${themePath}/_inc/images/4-5.webp</path>
            <pos>0.5 0.5</pos>
            <origin>0.5</origin>
            <maxSize>1 1</maxSize>
            <linearSmooth>true</linearSmooth>
            <zIndex>${zSelector}</zIndex>
            <color>00000000</color>
            <storyboard event="activate" repeat="forever">
                <animation property="path" to="${themePath}/_inc/images/4-5.webp" />
                <animation
                property="color"
                from="${systemCarouselSelectorColor}00"
                to="${systemCarouselSelectorColor}"
                duration="1000"
                mode="easeOut"
              />
                <animation
                property="color"
                from="${systemCarouselSelectorColor}"
                to="${systemCarouselSelectorColor}00"
                begin="1500"
                duration="1000"
                mode="easeOut"
              />
            </storyboard>
            <storyboard event="deactivate">
                <animation property="path" to="${themePath}/_inc/images/4-5.webp" />
                <animation property="color" to="00000000" />
            </storyboard>
          </image>

          <image name="backdrop" extra="true">
            <path>${themePath}/_inc/images/icon.webp</path>
            <pos>0.5 0.5</pos>
            <origin>0.5</origin>
            <maxSize>1 1</maxSize>
            <opacity>${lowOpacity}</opacity>
            <color>${BackdropColor}</color>
            <zIndex>${zUI}</zIndex>
          </image>

          <image name="shade" extra="true">
            <path>${themePath}/_inc/images/4-5-bg.webp</path>
            <pos>0.5 0.5</pos>
            <origin>0.5</origin>
            <maxSize>1 1</maxSize>
            <opacity>${lowOpacity}</opacity>
            <zIndex>${zUI}</zIndex>
          </image>

          <image name="systemBack" extra="true">
            <path
              ifSubset="icon-scheme:icon"
            >firstfile("${themePath}/_inc/systems/carousel-icons-icons/" + {system:theme} + ".webp","${themePath}/_inc/systems/carousel-icons-icons/_default.webp")</path>
            <pos>0.5 0.45</pos>
            <origin>0.5</origin>
            <maxSize>0.8 0.9</maxSize>
            <scale>1</scale>
            <opacity>${mediumOpacity}</opacity>
            <linearSmooth>true</linearSmooth>
            <zIndex>${zUI}</zIndex>

            <storyboard event="activate">
              <animation property="opacity" to="1.00" duration="250" mode="easeOut" />
            </storyboard>

            <storyboard event="deactivate">
              <animation property="opacity" to=".90" duration="250" mode="easeOut" />
            </storyboard>
          </image>

          <image name="theLogoImage" pos="0.5 0.65" origin="0.5 0" maxSize="0.45 0.25" linearSmooth="true" extra="true">
            <path>${themePath}/_inc/systems/logos/{system:theme}.svg</path>
            <zIndex>${zIcons}</zIndex>
            <color>${systemInfoColor}</color>
          </image>

          <container padding="0">
            <text name="fallbackText" alignment="center" multiLine="true">
              <origin>0 0.5</origin>
              <pos>0 0.5</pos>
              <size>1 1</size>
              <forceUppercase>true</forceUppercase>
              <visible>!exists("${themePath}/_inc/systems/logos/" + {system:theme} + ".svg")</visible>
              <text>{system:fullName}</text>
              <fontSize>${systemDescriptionFontSize}</fontSize>
              <fontPath>${fontBold}</fontPath>
              <color>${systemInfoColor}</color>
              <scale>1</scale>
              <zIndex>5</zIndex>
            </text>

            <opacity>${mediumOpacity}</opacity>

            <storyboard event="activate">
              <animation property="opacity" to="1" />
            </storyboard>

            <storyboard event="deactivate">
              <animation property="opacity" to="0.9" duration="250" mode="easeOut" />
            </storyboard>
          </container>
        </container>

        <!-- System View: Grid (Art)-->
        <container ifSubset="icon-scheme:art|custom-art">
          <padding>0 0 0 0</padding>
          <scale>1</scale>
          <storyboard event="activate">
            <animation property="scale" to="1.05" duration="150" mode="easeOut" />
          </storyboard>
          <storyboard event="deactivate">
            <animation property="scale" to="1" duration="250" mode="easeOut" />
          </storyboard>

          <image name="selector" extra="true">
            <path>{themePath}/_inc/images/square.webp</path>
            <pos>0.5 0.74</pos>
            <origin>0.5 1</origin>
            <maxSize>0.77 0.67</maxSize>
            <linearSmooth>true</linearSmooth>
            <zIndex>${zSelector}</zIndex>
            <color>00000000</color>

            <storyboard event="activate" repeat="forever">
              <animation property="path" to="${themePath}/_inc/images/square.webp" />
              <animation
                property="color"
                from="${systemCarouselSelectorColor}00"
                to="${systemCarouselSelectorColor}"
                duration="1000"
                mode="easeOut"
              />
              <animation
                property="color"
                from="${systemCarouselSelectorColor}"
                to="${systemCarouselSelectorColor}00"
                begin="1500"
                duration="1000"
                mode="easeOut"
              />
            </storyboard>
            <storyboard event="deactivate">
              <animation property="path" to="${themePath}/_inc/images/square.webp" />
              <animation property="color" to="00000000" />
            </storyboard>
          </image>

          <image name="shade" extra="true">
            <path>${themePath}/_inc/images/square-bg.webp</path>
            <pos>0.5 0.77</pos>
            <origin>0.5 1</origin>
            <maxSize>0.84 0.74</maxSize>
            <roundCorners>${CornersSmall}</roundCorners>
            <zIndex>${zUI}</zIndex>
          </image>
          <image name="systemBack" extra="true">
          <path
              ifSubset="icon-scheme:art"
            >firstfile("${themePath}/_inc/systems/carousel-icons-art/" + {system:theme} + ".webp","${themePath}/_inc/systems/carousel-icons-art/_default.webp")</path>
            <pos>0.5 0.73</pos>
            <origin>0.5 1</origin>
            <maxSize>0.75 0.65</maxSize>
     	      <scale>1</scale>
     	      <roundCorners>${CornersSmall}</roundCorners>
            <opacity>${mediumOpacity}</opacity>
            <linearSmooth>true</linearSmooth>
            <zIndex>${zUI}</zIndex>

            <storyboard event="activate">
              <animation property="opacity" to="1.00" duration="250" mode="easeOut" />
            </storyboard>

            <storyboard event="deactivate">
              <animation property="opacity" to=".90" duration="250" mode="easeOut" />
            </storyboard>
          </image>

          <image name="theLogoImage" pos="0.5 0.755" origin="0.5 0" maxSize="0.6 0.18" linearSmooth="true">
            <path>${themePath}/_inc/systems/logos/{system:theme}.svg</path>
            <zIndex>${zIcons}</zIndex>
            <color>${systemInfoColor}</color>
          </image>
          <text name="fallbackText" alignment="center" multiLine="true">
            <origin>0 0.5</origin>
            <pos>0 0.82</pos>
            <size>1 1</size>
            <forceUppercase>true</forceUppercase>
            <visible>false</visible>
            <visible>!exists("${themePath}/_inc/systems/logos/" + {system:theme} + ".svg")</visible>
            <text>{system:fullName}</text>
            <fontSize>${systemDescriptionFontSize}</fontSize>
            <fontPath>${fontBold}</fontPath>
            <color>${systemInfoColor}</color>
            <scale>1</scale>
            <zIndex>10</zIndex>
         	</text>
          <container padding="0">
            <opacity>${mediumOpacity}</opacity>

            <storyboard event="activate">
              <animation property="opacity" to="1" />
            </storyboard>

            <storyboard event="deactivate">
              <animation property="opacity" to="0.9" duration="250" mode="easeOut" />
            </storyboard>
          </container>
        </container>
      </itemTemplate>
    </imagegrid>
  </view>
</theme>
