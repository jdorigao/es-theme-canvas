<?xml version="1.0" encoding="UTF-8" ?>
<theme>
  <!-- Top Bar Elements -->
  <view name="screen">
    <controllerActivity name="controllerActivity">
      <pos>0.7 0.02</pos>
      <size>0.2 0.03</size>
      <itemSpacing>0.003</itemSpacing>
      <color>${systemInfoColor}</color>
      <zIndex>${zIcons}</zIndex>
      <imagePath>${themePath}/_inc/images/gamepad.svg</imagePath>
      <gunPath>${themePath}/_inc/images/gun.svg</gunPath>
      <wheelPath>${themePath}/_inc/images/wheel.svg</wheelPath>
      <activityColor>A0A0FFC0</activityColor>
      <hotkeyColor>FFA0A0C0</hotkeyColor>
      <horizontalAlignment>right</horizontalAlignment>
    </controllerActivity>

    <batteryIndicator name="batteryIndicator">
      <color>${systemInfoColor}</color>
      <pos>0.93 0.012</pos>
      <size>0.04 0.04</size>
      <zIndex>${zIcons}</zIndex>
      <full>${themePath}/_inc/images/battery/battery-icon-100.svg</full>
      <at75>${themePath}/_inc/images/battery/battery-icon-75.svg</at75>
      <at50>${themePath}/_inc/images/battery/battery-icon-50.svg</at50>
      <at25>${themePath}/_inc/images/battery/battery-icon-25.svg</at25>
      <empty>${themePath}/_inc/images/battery/battery-icon-0.svg</empty>
      <incharge>${themePath}/_inc/images/battery/battery-icon-charging.svg</incharge>
      <networkIcon>${themePath}/_inc/images/network-icon-on.svg</networkIcon>
      <planemodeIcon>${themePath}/_inc/images/network-icon-off.svg</planemodeIcon>
      <horizontalAlignment>center</horizontalAlignment>
    </batteryIndicator>

    <text name="clock">
      <color>${systemInfoColor}</color>
      <fontPath>${fontBold}</fontPath>
      <fontSize>${systemInfoFont}</fontSize>
      <lineSpacing>1</lineSpacing>
      <pos>0.5 0.04</pos>
      <origin>0.5 0.5</origin>
      <size>0.18 0.1</size>
      <alignment>center</alignment>
      <verticalAlignment>center</verticalAlignment>
      <zIndex>${zText}</zIndex>
    </text>
  </view>

  <view name="system">
    <image name="gamesicon" extra="true">
      <pos>0.075 0.05</pos>
      <size>0 ${systemInfoFontSize}</size>
      <origin>1 0.5</origin>
      <path>${themePath}/_inc/images/gamescount.svg</path>
      <color>${systemInfoColor}</color>
      <opacity>${highOpacity}</opacity>
      <zIndex>${zIcons}</zIndex>
      <visible>true</visible>
    </image>

		<text name="systemInfo">
      <origin>0 0.5</origin>
      <fontPath>${fontBold}</fontPath>
      <zIndex>${zText}</zIndex>
      <color>${systemInfoColor}</color>
      <lineSpacing>1</lineSpacing>
      <size>0 ${systemInfoFont}</size>
      <fontSize>${systemInfoFont}</fontSize>
      <alignment>left</alignment>
		</text>

		<text name="systemInfoGrid" extra="true">
		  <pos>0.085 0.05</pos>
			<text>{system:total}</text>
			<fontPath>${fontBold}</fontPath>
			<origin>0 0.5</origin>
			<zIndex>${zText}</zIndex>
			<color>${systemInfoColor}</color>
			<alignment>left</alignment>
			<lineSpacing>1</lineSpacing>
      <size>0 ${systemInfoFont}</size>
      <fontSize>${systemInfoFont}</fontSize>
		</text>
	</view>
</theme>
